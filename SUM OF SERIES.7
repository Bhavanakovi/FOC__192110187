#include <stdio.h>

// Function to calculate the sum of the first n natural numbers
int sumOfSeries(int n) {
    return (n * (n + 1)) / 2;
}

int main() {
    int n;

    printf("Enter the value of n: ");
    scanf("%d", &n);

    int sum = sumOfSeries(n);
    printf("The sum of the first %d natural numbers is: %d\n", n, sum);

    return 0;
}
