#include <stdio.h>

// Function to calculate the cube of a number
float cube(float num) {
    return num * num * num;
}

int main() {
    float number;

    printf("Enter a decimal number: ");
    scanf("%f", &number);

    float result = cube(number);
    printf("The cube of %.2f is %.2f\n", number, result);

    return 0;
}
